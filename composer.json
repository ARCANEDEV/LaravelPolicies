{
    "name":        "arcanedev/laravel-policies",
    "description": "Policies manager for Laravel",
    "keywords":    ["arcanedev", "arcanesoft", "laravel", "policy", "policies", "acl", "ability", "abilities"],
    "homepage":    "https://github.com/ARCANEDEV/LaravelPolicies",
    "authors": [
        {
            "name":     "ARCANEDEV",
            "email":    "arcanedev.maroc@gmail.com",
            "homepage": "https://github.com/arcanedev-maroc",
            "role":     "Developer"
        }
    ],
    "type":    "library",
    "license": "MIT",
    "require": {
        "php":               "^7.2.5",
        "ext-json":          "*",
        "arcanedev/support": "^7.0"
    },
    "require-dev": {
        "orchestra/testbench": "^5.0",
        "phpunit/phpunit":     "^8.5|^9.0"
    },
    "autoload": {
        "psr-4": {
            "Arcanedev\\LaravelPolicies\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Arcanedev\\LaravelPolicies\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Arcanedev\\LaravelPolicies\\PoliciesServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
